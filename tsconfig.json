{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "baseUrl": "./",
    "paths": {
      "*": ["src/*"],
      "tests": ["tests/*"],
      "components/*": ["src/components/*", "src/components/*/index"],
      "screens/*": ["src/screens/*", "src/screens/*/index"],
      "store/*": ["src/store/*", "src/store/*/index"]
    }
  }
}
